{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6",
        "DOM"
     ],
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "app.ts", "index.ts", "routes.ts", "server.ts"]
}